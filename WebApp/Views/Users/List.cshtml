@model List<WebApp.Models.Entities.User>

<div class="container">
    <div class="row">
        <h2>Users</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Phone
                    </th>
                    <th>
                        Profile Picture
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            @user.FirstName
                        </td>
                        <td>
                            @user.LastName
                        </td>
                        <td>
                            @user.Email
                        </td>
                        <td>
                            @user.Phone
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@user.Id" button type="submit" class="btn btn-primary">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@user.Id" button type="submit" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>